<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionDetailActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@color/softgrey"
            android:padding="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_desc_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:text="Text"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/darkgrey"
                    android:text="Category"/>
                <TextView
                    android:id="@+id/tv_category_detail"
                    android:layout_width="0dp"
                    android:layout_weight="5.5"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/darkgrey"
                    android:text="Food"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/darkgrey"
                    android:text="Amount"/>
                <TextView
                    android:id="@+id/tv_amount_detail"
                    android:layout_width="0dp"
                    android:layout_weight="5.5"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/darkred"
                    android:text="-Rp 600,000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/darkgrey"
                    android:text="Date"/>
                <TextView
                    android:id="@+id/tv_date_time_detail"
                    android:layout_width="0dp"
                    android:layout_weight="5.5"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/darkgrey"
                    android:text="10/19/2020 09:00 am"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/darkgrey"
                    android:text="Type"/>
                <TextView
                    android:id="@+id/tv_type_detail"
                    android:layout_width="0dp"
                    android:layout_weight="5.5"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/darkgrey"
                    android:text="Expense"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/darkgrey"
                    android:text="Memo"/>
                <TextView
                    android:id="@+id/tv_memo_detail"
                    android:layout_width="0dp"
                    android:layout_weight="5.5"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/darkgrey"
                    android:text="-"/>
            </LinearLayout>
            
            <ImageView
                android:id="@+id/img_detail"
                android:layout_width="331dp"
                android:layout_height="174dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/darkgrey"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>